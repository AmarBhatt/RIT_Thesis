%% Copyright page
\def\beforepreface{
	\pagenumbering{roman}
	\thispagestyle{myheadings}
	\pagestyle{myheadings}
    \markboth{}{}
	\titlep
	\ifcopyright\copyrightpage\fi
	}

\def\prefacesection#1{%
    \thispagestyle{myheadings}
    \markboth{}{}
	\chapter*{#1}
	\addcontentsline{toc}{chapter}{#1}
}

\def\afterpreface{
  \begin{center}
  \newpage
	\begin{singlespace}
	\tableofcontents
	\end{singlespace}
	\newpage
	\iftablespage
		\begin{singlespace}
		\listoftables
		\end{singlespace}
		\newpage
	\fi
	\iffigurespage
		\begin{singlespace}
		\listoffigures
		\end{singlespace}
		\newpage
	\fi
	\ifalgorithmspage
		\begin{singlespace}
		\listofalgorithms
		\end{singlespace}
		\newpage
	\fi
  \end{center}
}

\def\abstractpage{
    \pagestyle{myheadings}
    \thispagestyle{myheadings}
    \markboth{}{}
	\def\@makeschapterhead##1{
	    %\vspace*{0.25in}
	    \vspace*{0.15in}
	    { \center
	    \huge \bf ##1\par
	    \nobreak
            \vskip 20pt } } % CHANGE: from 40pt to 20pt JC
	\chapter*{Abstract}
    \pagestyle{myheadings}
    \thispagestyle{myheadings}
    \markboth{}{}
	\addcontentsline{toc}{chapter}{Abstract}
	\begin{center}
		\large\bf\expandafter{\@title} \\ [0.15in]
		\@author \\ [0.15in]
		Supervising Professor: \@adviser
	\end{center}
	%\vskip.25in
}

\def\body{
	\newpage
	\pagenumbering{arabic}
	\thispagestyle{myheadings}
	\pagestyle{myheadings}
    \markboth{}{}
	\def\chaptermark##1{}
}

% Redefine \thebibliography to go to a new page and put an entry in the
% Table of Contents
\def\thebibliography#1{%
    \chapter*{\center Bibliography}
    \list {[\arabic{enumi}]}{\settowidth\labelwidth{[#1]}\leftmargin\labelwidth
    \advance\leftmargin\labelsep \usecounter{enumi} }
    \usecounter{enumi}
    \def\newblock{\hskip .11em plus .33em minus .07em}
    \sloppy\clubpenalty4000\widowpenalty4000
    \sfcode`\.=1000\relax}

% Redefine \thebibliography to not use any page headings except the
% page number.
\let\@ldthebibliography\thebibliography
\renewcommand{\thebibliography}[1]{
	\newpage
    \thispagestyle{myheadings}
    \markboth{}{}
	\addcontentsline{toc}{chapter}{Bibliography}
	\@ldthebibliography{#1}
}

% Biography
% Don't use any chapter numbers, page numbers. Add this entry to the
% table of contents.
\def\vita{%
	\def\@makeschapterhead##1{
        \thispagestyle{myheadings}
        \markboth{}{}
	    \vspace*{0.2in}
	    { \center
	    \huge \bf ##1\par
	    \nobreak \vskip 40pt } }
	\chapter*{Biographical Note}
	\addcontentsline{toc}{chapter}{Biographical Note}
}

% Start out normal
\pagestyle{myheadings}
\markboth{}{}

% Redefine \@makeschapterhead and \@makechapterhead so they start
% out at the top of the page and used \huge rather than \Huge font sizes.
\def\@makeschapterhead#1{
    \thispagestyle{myheadings}
    \markboth{}{}
    \vspace*{0.2in}
    { %\center
    \huge \bf #1\par
    \nobreak \vskip 40pt }
}
\def\@makechapterhead#1{
    \thispagestyle{myheadings}
    \markboth{}{}
    \vspace*{0.2in}
    { %\center
    \ifnum \c@secnumdepth >\m@ne \huge\bf \@chapapp{} \thechapter \par
    \vskip 20pt \fi \huge \bf #1\par
    \nobreak \vskip 40pt }
}
